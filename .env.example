# Email & RSS Notification Agent - Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DB_PATH=agent_state.db

# ============================================================================
# EMAIL ACCOUNTS CONFIGURATION
# ============================================================================
# Multiple accounts format (recommended):
# List all email accounts to monitor (comma-separated)
EMAIL_ACCOUNTS=your-email@gmail.com,another-email@outlook.com,third-email@yahoo.com

# Provide password for each account (use the full email as key)
# For Gmail/Yahoo: Use App Passwords (not your regular password)
EMAIL_PASSWORD_your-email@gmail.com=your-gmail-app-password
EMAIL_PASSWORD_another-email@outlook.com=your-outlook-app-password
EMAIL_PASSWORD_third-email@yahoo.com=your-yahoo-app-password

# Optional: Override IMAP settings for specific accounts
# EMAIL_HOST_your-email@gmail.com=imap.gmail.com
# EMAIL_PORT_your-email@gmail.com=993
# EMAIL_USE_SSL_your-email@gmail.com=true

# Email fetch configuration
MAX_EMAILS_PER_ACCOUNT=10
EMAIL_CHECK_MINUTES=15

# Email filters (leave empty to accept all emails)
# EMAIL_FROM_FILTERS=@linkedin.com,@example.com
# EMAIL_SUBJECT_KEYWORDS=commented on,shared a post,liked your,mentioned you
EMAIL_FROM_FILTERS=
EMAIL_SUBJECT_KEYWORDS=

# ============================================================================
# NOTIFICATION CONFIGURATION
# ============================================================================
# Email notification settings
SEND_SUMMARY_FROM_EMAIL=your-sender-email@gmail.com
SEND_SUMMARY_TO_EMAIL=your-recipient-email@example.com

# Notification method: "sms" or "email"
NOTIFICATION_METHOD=email

# ============================================================================
# TWILIO CONFIGURATION (Required for SMS notifications)
# ============================================================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+1234567890
TWILIO_TO_NUMBER=+0987654321

# ============================================================================
# LLM CONFIGURATION (Required)
# ============================================================================
LLM_PROVIDER=openai
LLM_API_KEY=your_openai_api_key
LLM_MODEL=gpt-4o-mini
LLM_BASE_URL=https://api.openai.com/v1
LLM_MAX_TOKENS=2000
LLM_TEMPERATURE=0.2

# ============================================================================
# RSS CONFIGURATION (Optional)
# ============================================================================
RSS_ENABLED=false
RSS_FEEDS=https://example.com/feed.xml,https://another.com/rss

# ============================================================================
# SCHEDULER CONFIGURATION (Optional)
# ============================================================================
MIN_GAP_MINUTES=1
MAX_GAP_MINUTES=120

# ============================================================================
# LOGGING CONFIGURATION (Optional)
# ============================================================================
LOG_LEVEL=INFO
