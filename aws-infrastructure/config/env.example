# AWS Infrastructure Configuration
# Copy this file to env.tfvars and fill in your values

# AWS Configuration
aws_region = "us-east-1"
aws_profile = "default"  # Optional: AWS CLI profile name

# Application Configuration
app_name = "notification-agent"
environment = "prod"  # prod, staging, dev

# Domain Configuration (optional)
domain_name = ""  # e.g., notifications.example.com
certificate_arn = ""  # ACM certificate ARN for custom domain

# LLM Configuration
llm_api_key = ""  # OpenAI API key or other LLM provider key
llm_base_url = "https://api.openai.com/v1"
llm_model = "gpt-3.5-turbo"

# Email Configuration (SES)
ses_from_email = "notifications@example.com"  # Must be verified in SES

# SMS Configuration (Twilio) - Optional
twilio_account_sid = ""
twilio_auth_token = ""
twilio_from_number = ""

# JWT Secret (generate a strong random string)
jwt_secret = ""  # Generate with: openssl rand -hex 32

# Notification Settings
notification_frequency_minutes = 15

# Cost Optimization
use_parameter_store = true  # Use Parameter Store instead of Secrets Manager for non-rotating secrets

